			<!--end::Menu-->
		</div>
		<!--end::Toolbar-->
	</div>
	<!--end::Header-->
	<!--begin::Body-->
	<div class="card-body pt-0 px-0">
		<!--begin::Chart-->
		<div id="kt_charts_widget_1" data-kt-negative-color="rgba(150, 142, 126, 0.2)" class="min-h-auto ps-4 pe-6 mb-3" style="height: 300px"></div>
		<!--end::Chart-->
		<!--begin::Info-->
		<div class="d-flex align-items-center px-9">
