<Window x:Class="Arius.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arius.UI"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource Locator}, Path=MainViewModel}"
        Title="MainWindow" Height="450" Width="800">

    <Grid Margin="20">
        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Content="Storage Account Name:"/>
                <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" Margin="1" Text="{Binding AccountName}" />

                <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Content="Storage Account Key:"/>
                <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" Margin="1" Text="{Binding AccountKey}" />

                <Label Grid.Row="2"  Grid.Column="0" HorizontalAlignment="Left" Content="Container:"/>
                <ComboBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" Margin="1" ItemsSource="{Binding Containers}" SelectedItem="{Binding SelectedContainer}" DisplayMemberPath="Name" />

                
            </Grid>
            <RadioButton x:Name="dfsdfsd" Content="Latest" IsChecked="True"></RadioButton>
            <DockPanel>
                <RadioButton HorizontalAlignment="Left" x:Name="dfsdfsd3" Content="On date: "></RadioButton>
                <Slider HorizontalAlignment="Stretch" Margin="15,0,15,0" />
            </DockPanel>
            <CheckBox x:Name="dfsdfsd2" Content="Include deleted items" />

        </StackPanel>
        
